<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:contextClickable="false">


    <LinearLayout android:layout_weight="5" android:layout_height="fill_parent" android:layout_width="fill_parent">
        <Button
            android:id="@+id/category1"
            android:text="Categorie 1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/category2"
            android:text="Categorie 2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout android:layout_weight="3" android:layout_height="fill_parent" android:layout_width="fill_parent">
        <GridLayout
            android:isScrollContainer="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="12"
            android:rowCount="12">


            <Button
                android:id="@+id/x"
                android:layout_gravity="left|top"
                android:text="Button"
                />

            <Button
                android:id="@+id/y"
                android:layout_gravity="left|top"
                android:text="Button" />

            <Button
                android:id="@+id/z"
                android:layout_gravity="left|top"
                android:text="Button" />

            <Button
                android:id="@+id/wwww"
                android:layout_gravity="left|top"
                android:text="Button" />


        </GridLayout>
    </LinearLayout>
    <LinearLayout android:layout_weight="4" android:layout_height="fill_parent" android:layout_width="fill_parent" android:background="?attr/colorPrimary"
        >

        <GridLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alignmentMode="alignBounds">

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/action_turn_left"
                android:background="@drawable/turn_left"
                android:layout_margin="20dp"/>

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/action_turn_right"
                android:background="@drawable/turn_right"
                android:layout_margin="20dp"/>
            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/action1"
                android:background="@drawable/loop_back"
                android:layout_margin="20dp"/>

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/action2"
                android:background="@drawable/loop_back"
                android:layout_margin="20dp"/>


            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/action3"
                android:background="@drawable/loop_back"
                android:layout_margin="20dp"/>


            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/action_return"
                android:background="@drawable/loop_back"
                android:layout_margin="20dp"/>



        </GridLayout>


    </LinearLayout>

</LinearLayout>