<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Redisposez les éléments"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:paddingLeft="5dp"

        />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal" android:layout_width="match_parent" android:background="@color/teal"
            android:layout_height="match_parent" android:id="@+id/elementsProduction" android:minHeight="50dp"
            android:textColor="@color/white">
        </LinearLayout>




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mettre les éléments ici pour supprimer"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:paddingLeft="5dp"
        />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:minHeight="50dp"
            android:orientation="horizontal" android:layout_width="fill_parent" android:background="@color/redMaterial"
            android:layout_height="fill_parent" android:id="@+id/elementsProductionSup"
            android:textColor="@color/white">

        </LinearLayout>



</LinearLayout>